<div class="form-background-image">

  <h2 class="user-form-header">Please fill in the forms below:</h2>

    <div class="container">
      <%= simple_form_for(meal)  do |f| %>
        <div class="form-inputs user-forms">
          <%= f.input :meal_name,
            label: false,
            placeholder: "Meal name",
            input_html: {class: "form-input-field"} %>
          <%= f.input :category,
            label: false,
            placeholder: "Category",
            input_html: {class: "form-input-field"} %>
          <%= f.input :description,
            label: false,
            placeholder: "Description",
            input_html: {class: "form-input-field"} %>
          <%= f.input :address,
            label: false,
            placeholder: "Address",
            input_html: { autocomplete: "address", id: "user_address", class: "form-input-field" } %>
          <%= f.input :price,
            label: false,
            placeholder: "Price",
            input_html: {class: "form-input-field"} %>
          <%= f.input :quantity,
            label: false,
            placeholder: "Quantity available",
            input_html: {class: "form-input-field"} %>
          <%= f.input :photo, label: false, as: :file %>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.submit class: "btn btn-rounded border-0" %>
        </div>

      <% end %>
    </div>

</div>
