<%= simple_form_for(meal)  do |f| %>
  <%= f.input :meal_name %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :quantity %>
  <%= f.input :photo, as: :file %>

  <div class="d-flex justify-content-center">
    <%= f.submit class: "btn btn-rounded border-0" %>
  </div>
<% end %>
