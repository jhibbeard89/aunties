<div class="form-background-image" style="background-image">
  <h2 class="user-form-header">Please log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs user-forms">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions" type="button">
      <%= f.button :submit, "Log in", class: "btn btn-rounded" %>
    </div>
  <% end %>

  <div class="bottom-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
